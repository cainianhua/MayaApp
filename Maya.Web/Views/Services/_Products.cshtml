@using Maya.Services.VO
@model List<ProductVO>

<div id="products" data-title="产品专题" class="panel" data-nav="citybox">
    <div class="productbox">
        @if ( Model.Count == 0 ) {
            <text>暂无产品信息</text>
        }

        @foreach ( ProductVO item in Model ) {
            <div class="proditem">
                <a data-ignore="true" href="@item.LinkTo">
                    <img src="@item.Pic" alt="@item.Name">
                    <p>@item.Description</p>
                </a>
            </div>
        }
    </div>
</div>
