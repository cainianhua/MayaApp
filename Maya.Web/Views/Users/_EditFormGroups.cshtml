@model UserEditModel

<!-- BEGIN FORM-->
@using (Html.BeginForm(Request.RequestContext.RouteData.GetRequiredString("action"), "Users", FormMethod.Post, new { @class = "form-horizontal", autocomplete = "off" } )) {
    @Html.AntiForgeryToken()
    <div class="form-body">
        @*<h3 class="form-section">Advance validation. <small>Custom radio buttons, checkboxes and Select2 dropdowns</small></h3>*@
        <div class="alert alert-danger display-hide">
            <button class="close" data-close="alert"></button>
            You have some form errors. Please check below.
        </div>
        <div class="alert alert-success display-hide">
            <button class="close" data-close="alert"></button>
            Your form validation is successful!
        </div>
        @using (Html.BeginPanelFor( m => m.UserName, new { @class = "form-group" } )) {
            @Html.LabelFor( m => m.UserName, new { @class = "control-label col-md-3" } )
            <div class="col-md-4">
                @Html.TextBoxFor( m => m.UserName, new { @class = "form-control", @readonly = "readonly" } )
                @Html.ValidationMessageFor( m => m.UserName )
            </div>
        }
        @using (Html.BeginPanelFor( m => m.Email, new { @class = "form-group" } )) {
            @Html.LabelFor( m => m.Email, new { @class = "control-label col-md-3" } )
            <div class="col-md-4">
                @Html.TextBoxFor( m => m.Email, new { @class = "form-control", rows = "6" } )
                @Html.ValidationMessageFor( m => m.Email )
            </div>
        }
    </div>
    <div class="form-actions">
        <div class="row">
            <div class="col-md-offset-3 col-md-9">
				@Html.HiddenFor(m => m.UserId)
                <button type="submit" class="btn green">保存</button>
                @Html.ActionLink("取消", "Index", null, new { @class = "btn default" } )
            </div>
        </div>
    </div>
}
<!-- END FORM-->